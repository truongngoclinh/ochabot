<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="primary_action_button" parent="AppTheme">
        <item name="android:background">@drawable/btn_primary_bg_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="PopupAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">36%</item>
        <item name="android:windowMinWidthMinor">36%</item>
        <item name="windowFixedWidthMajor">36%</item>
    </style>

</resources>
