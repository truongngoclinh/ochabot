<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <style name="primary_action_button" parent="AppTheme">
        <item name="android:background">@drawable/btn_primary_bg_large</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ConfirmDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="PopupAlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowMinWidthMajor">36%</item>
        <item name="android:windowMinWidthMinor">36%</item>
        <item name="windowFixedWidthMajor">36%</item>
    </style>

    <style name="OcDialogAppTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:background">@color/transparent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="windowFixedHeightMinor">95%</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>

    </style>

</resources>
