<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="vn.ochabot.seaconnect">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
            android:name=".core.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/label_app_name"
            android:roundIcon="@drawable/icon_sea"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".challenges.ChallengesDetailActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".MainActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".challenges.ChallengesActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".lunch.LunchActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".lunch.OrderingActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:name=".event.EventsActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:name=".event.EventDetailActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:name=".lunch.ShareLunchActivity"
                android:screenOrientation="portrait"/>
    </application>
</manifest>